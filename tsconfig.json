{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",

    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "./dist",
    "rootDir": "./src",

    "declaration": true,
    "sourceMap": true,

    "resolveJsonModule": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*.ts"], 
  "exclude": ["node_modules", "dist"]
}
